#include <stdio.h>
int main(){
	int x,y; 
	do {
		printf("Enter value of x:");
		scanf("%d", &x);
		printf("Enter value of y: ");
		scanf("%d", &y);
		
		int t = x;
		x = y;
		y = t;
		
		printf("\nAfter swapping, the value of x is: %d", x);
		printf(", the value of y is %d.\n", y);
		printf("\n");
		
	} while(x!=0 && y!=0);
	return 0;
}
